@model IEnumerable<e_commerce_platform.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}
<br />
<br />
<section class="basket-area section-gap">
    <div class="container">
<h2>My Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5">No orders found.</td>
            </tr>
        }
        else
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Confirmation", "Basket", new { orderId = order.OrderID })" class="btn btn-info btn-sm">View Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
</section>