@model e_commerce_platform.Models.Testimonial

@{
    ViewData["Title"] = "Approve Testimonial";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Are you sure you want to approve this testimonial?</h3>
    <div class="alert alert-info">
        <strong>Content:</strong> @Model.Comment
    </div>

    <form asp-action="ApproveConfirmed" method="post">
        @Html.HiddenFor(model => model.TestimonialID)
        <div class="form-group">
            <button type="submit" class="btn btn-success">Approve</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
