@model e_commerce_platform.Models.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .vh-100 {
            background-color: #1F1F1F;
        }

        .login-card {
            border-radius: 1rem;
        }

        .login-image {
            border-radius: 0 1rem 1rem 0;
        }


        .small.text-muted {
            color: #000;
        }
    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-12">
                    <div class="card login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-6 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form asp-action="Register" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <a href="index.html"><img src="~/assets/img/logo-black.png" alt="" title="" /></a>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Email" class="form-label"></label>
                                            <input asp-for="Email" class="form-control form-control-lg" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Password" class="form-label"></label>
                                            <input asp-for="Password" class="form-control form-control-lg" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="ConfirmPassword" class="form-label"></label>
                                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="FullName" class="form-label"></label>
                                            <input asp-for="FullName" class="form-control form-control-lg" />
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Register</button>
                                        </div>

                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Already have an account? <a href="@Url.Action("Login", "Account")" style="color: #000;">Login here</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-5 d-flex justify-content-center align-items-center">
                                <img src="~/assets/img/Watch app-bro.svg"
                                     alt="register form" class="img-fluid login-image" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
