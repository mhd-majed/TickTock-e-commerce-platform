@model List<e_commerce_platform.Models.BasketItem>

<h1>Basket</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.PriceAfterDiscount.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <form asp-action="Remove" asp-route-productId="@item.ProductId" method="post">
                        <input type="submit" value="Remove" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Clear" method="post">
    <input type="submit" value="Clear Basket" class="btn btn-warning" />
</form>
